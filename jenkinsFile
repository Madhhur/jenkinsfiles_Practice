@Library('My_Shared@main') _

pipeline {
    agent any   // or agent { label 'master' } if your node is actually called master
    
    stages {
        stage("first") {
            steps {
                script {
                    gitCheckout([
                        url: 'https://github.com/Madhhur/repo1.git',
                        branch: 'main',
                        credentialId: 'Madhhur'
                    ])
                }
                sh '''
                  pwd
                  ls -lrta
                '''
            }
        }
    }

    post {
        always {
            echo "======== always ========"
             }
        success {
            echo "======== pipeline executed successfully ========"
        }
        failure {
            echo "======== pipeline execution failed ========"
        }
    }
}
