@Library('My_Shared') _

pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
               script {
                        def config = [
                            url: 'https://github.com/Madhhur/repo1.git',
                            branch: 'main',
                            credentialId: 'Madhhur'
                        ]
                        
                        gitCheckout(config)

                        sh '''
                            echo "Checkout completed"
                            pwd
                            ls -lrt
                        '''
                    }



            }
        }
        stage('Build') {
            steps {
                echo "Building the project"
                sh 'echo "Build step executed"'
            }
        }
    }
        post {
                always {
                    echo "========always========"
                    cleanWs()
                }
                success {
                    echo "========pipeline executed successfully ========"
                }
            }
}
